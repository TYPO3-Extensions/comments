<T3DataStructure>
	<ROOT>
		<TCEforms>
			<sheetTitle>LLL:EXT:comments/pi1/locallang.xml:sheet.general</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
			<code>
				<TCEforms>
					<label>LLL:EXT:comments/pi1/locallang.xml:tt_content.tx_comments_pi1.code</label>
					<!--onChange>reload</onChange-->
					<config>
						<type>select</type>
						<items>
							<n0>
								<n0>LLL:EXT:comments/pi1/locallang.xml:tt_content.tx_comments_pi1.code.I.0</n0>
								<n1>COMMENTS</n1>
							</n0>
							<n1>
								<n0>LLL:EXT:comments/pi1/locallang.xml:tt_content.tx_comments_pi1.code.I.1</n0>
								<n1>FORM</n1>
							</n1>
						</items>
						<default>COMMENTS</default>
					</config>
				</TCEforms>
			</code>
			<externalPrefix>
				<TCEforms>
				<label>LLL:EXT:comments/pi1/locallang.xml:tt_content.tx_comments_pi1.trigger.prefix</label>
				<config>
					<type>input</type>
					<default>tx_ttnews</default>
					<eval>required,trim,lower,alphanum_x</eval>
					<size>15</size>
				</config>
				</TCEforms>
			</externalPrefix>
			<storagePid>
				<TCEforms>
					<label>LLL:EXT:comments/pi1/locallang.xml:tt_content.tx_comments_pi1.storage.page</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<prepand_tname>0</prepand_tname>
						<multiple>0</multiple>
						<minitems>0</minitems>
						<maxitems>1</maxitems>
						<size>1</size>
					</config>
				</TCEforms>
			</storagePid>
			<templateFile>
				<TCEforms>
					<label>LLL:EXT:comments/pi1/locallang.xml:tt_content.tx_comments_pi1.template_file</label>
					<config>
						<type>input</type>
						<eval>trim,required</eval>
						<default>EXT:comments/res/pi1_template.html</default>
						<wizards type="array">
							<_PADDING>2</_PADDING>
							<link type="array">
								<type>popup</type>
								<title>Link</title>
								<icon>link_popup.gif</icon>
								<script>browse_links.php?mode=file</script>
								<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
							</link>
						</wizards>
					</config>
				</TCEforms>
			</templateFile>
		</el>
	</ROOT>
</T3DataStructure>